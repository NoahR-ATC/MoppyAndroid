<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="com.oracle.jmc.console.ui.notification_contexts.xml"
            plugin="com.oracle.jmc.console.ui.notification"/>
   </extension>
   <extension
         point="com.oracle.jmc.console.ui.consolepage">
      <consolePage
            class="com.oracle.jmc.console.ui.notification.TriggerTab"
            helpContextID="com.oracle.jmc.console.ui.notification.TriggerTab"
            hostEditorId="com.oracle.jmc.console.ui.editor"
            placement="/#3.0"
            icon="icons/alert_obj.png"
            id="com.oracle.jmc.console.ui.notification.TriggerTab"
            name="%TAB_TRIGGER_NAME">
      </consolePage>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            category="com.oracle.jmc.ui.wizards.export"
            class="com.oracle.jmc.console.ui.notification.wizard.RuleExportWizard"
            icon="icons/alert_obj.png"
            id="com.oracle.jmc.console.ui.notification.RuleExportWizard"
            name="%TRIGGER_RULES">
        <description>
           %EXPORT_TRIGGER_RULES_DESCRIPTION
        </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            category="com.oracle.jmc.ui.wizards.import"
            class="com.oracle.jmc.console.ui.notification.wizard.RuleImportWizard"
            icon="icons/alert_obj.png"
            id="com.oracle.jmc.console.ui.notification.RuleImportWizard"
            name="%TRIGGER_RULES">
    	<description>
           %IMPORT_TRIGGER_RULES_DESCRIPTION
        </description>
      </wizard>
   </extension>
   <extension
         point="com.oracle.jmc.rjmx.triggerActions">
      <triggerAction
            class="com.oracle.jmc.console.ui.notification.action.TriggerActionDumpRecording"
            description="%TRIGGER_ACTION_DUMP_JFR_DESCRIPTION"
            icon="icons/flight_recorder.png"
            id="com.oracle.jmc.console.ui.notification.action.TriggerActionDumpRecording"
            name="%TRIGGER_ACTION_DUMP_JFR_NAME">
         <file
               description="%TRIGGER_ACTION_DUMP_JFR_FILE_DESCRIPTION"
               id="file"
               name="%TRIGGER_ACTION_DUMP_JFR_FILE"
               value="automaticallyTriggeredRecording.jfr"/>
         <timerange
               id="timerange"
               name="%TRIGGER_ACTION_DUMP_JFR_TIMERANGE_LABEL"
               description="%TRIGGER_ACTION_DUMP_JFR_TIMERANGE_DESCRIPTION"
               value="30s"/>
         <boolean
               description="%TRIGGER_ACTION_DUMP_JFR_OPEN_DESCRIPTION"
               id="open"
               name="%TRIGGER_ACTION_DUMP_JFR_OPEN_LABEL"
               value="false">
         </boolean>
      </triggerAction>
   	  <triggerAction
            class="com.oracle.jmc.console.ui.notification.action.TriggerActionStartContinuousRecording"
            description="%TRIGGER_ACTION_START_CONT_JFR_DESCRIPTION"
            icon="icons/flight_recorder.png"
            id="com.oracle.jmc.console.ui.notification.action.TriggerActionStartContinuousRecording"
            name="%TRIGGER_ACTION_START_CONT_JFR_NAME">
	  <string
	  	    description="%TRIGGER_ACTION_START_CONT_JFR_NAME_DESCRIPTION"
	  	    id="name"
	  	    name="%TRIGGER_ACTION_START_CONT_JFR_NAME_LABEL"
	  	    value="My Recording"/>
      </triggerAction>
   	  <triggerAction
            class="com.oracle.jmc.console.ui.notification.action.TriggerActionStartTimeBoundRecording"
            description="%TRIGGER_ACTION_START_TIME_JFR_DESCRIPTION"
            icon="icons/flight_recorder.png"
            id="com.oracle.jmc.console.ui.notification.action.TriggerActionStartTimeBoundRecording"
            name="%TRIGGER_ACTION_START_TIME_JFR_NAME">
	  <string
	  	    description="%TRIGGER_ACTION_START_TIME_JFR_NAME_DESCRIPTION"
	  	    id="name"
	  	    name="%TRIGGER_ACTION_START_TIME_JFR_NAME_LABEL"
	  	    value="My Recording"/>
      <file
            description="%TRIGGER_ACTION_START_TIME_JFR_FILE_DESCRIPTION"
            id="file"
            name="%TRIGGER_ACTION_START_TIME_JFR_FILE"
            value="automaticallyTriggeredRecording.jfr"/>
	  <timerange
            id="timerange"
            name="%TRIGGER_ACTION_START_TIME_JFR_TIMERANGE_LABEL"
            description="%TRIGGER_ACTION_START_TIME_JFR_TIMERANGE_DESCRIPTION"
            value="30s"/>
	  <boolean
            description="%TRIGGER_ACTION_START_TIME_JFR_OPEN_DESCRIPTION"
            id="open"
            name="%TRIGGER_ACTION_START_TIME_JFR_OPEN_LABEL"
            value="false">
	  </boolean>
      </triggerAction>
   </extension>   
</plugin>
